\def\periodo#1{\mathop{\vbox{\ialign{##\crcr\noalign{\kern3pt}%
\ensuremath{\braceld\leaders\vrule\hfill\bracerd}%
\crcr\noalign{\kern3pt\nointerlineskip}%
\ensuremath{\hfill\displaystyle{#1}\hfill}\crcr}}}\limits}
